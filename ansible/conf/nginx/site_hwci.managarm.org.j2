# {{ ansible_managed }}
{% import 'nginx_macros.j2' as h %}

server {
	listen 443 ssl http2;
	server_name hwci.managarm.org;
        client_max_body_size 128m;

	location /relay/ {
		proxy_buffering         off;
		proxy_redirect          off;
		proxy_pass              http://localhost:10997/;
	}

	location / {
		return 404;
	}

	{{ h.ssl_keys("hwci.managarm.org") }}
}
