[Unit]
Description=A puppet-connection based bridge between Discord and IRC
After=network-online.target
Wants=network-online.target

[Service]
WorkingDirectory=/run/irc-discord-bridgebot
RuntimeDirectory=irc-discord-bridgebot

Environment=IDB_CONFIG=/etc/idb.toml
User=irc-discord-bridgebot
ExecStart=/usr/local/bin/irc-discord-bridgebot

ProtectProc=noaccess
NoNewPrivileges=true
ProtectSystem=strict
ProtectHome=true

AmbientCapabilities=CAP_NET_RAW CAP_NET_BIND_SERVICE

[Install]
WantedBy=multi-user.target

